{
    "name": "Python",
    "image": "ghcr.io/situdevelopment/devcontainers/node-${localEnv:NODE_VERSION}",

    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "${localEnv:PYTHON_VERSION}"
        }
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "charliermarsh.ruff",
                "ms-python.black-formatter",
                "ms-python.isort",
                "ms-python.pylint",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "njpwerner.autodocstring"
            ],
            "settings": {
                "autoDocstring.customTemplatePath": "/usr/local/share/style/docstring-template.mustache",
                "[python]": {
                    "editor.rulers": [100],
                    "python.analysis.typeCheckingMode": "strict",
                    "python.testing.pytestArgs": ["tests"],
                    "python.testing.pytestEnabled": true,
                    "python.testing.unittestEnabled": false
                }
            }
        }
    },

    "postCreateCommand": "pip install poetry && poetry config virtualenvs.create false && poetry install"
}
