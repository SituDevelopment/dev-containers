{
    "name": "Ubuntu Base",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "${templateOption:nodeVersion}"
        },
        "ghcr.io/guiyomh/features/vim:0": {},
        "ghcr.io/situdevelopment/features/automation": {}
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "esbenp.prettier-vscode",
                "GitHub.copilot",
                "github.vscode-github-actions",
                "maattdd.gitless"
            ]
        }
    },

    // https://github.com/devcontainers/features/tree/main/src/node#using-nvm-from-postcreatecommand-or-another-lifecycle-command
    "postCreateCommand": ". ${NVM_DIR}/nvm.sh && nvm install --lts && npm install"
}
